{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es5",
    "module": "CommonJS",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "declarationMap": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./dist"
  },
  "include": ["src/*"],
  "exclude": ["node_modules"]
}
